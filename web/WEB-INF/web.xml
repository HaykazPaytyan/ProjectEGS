<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>servlet.api.UserServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/api/user</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserIdServlet</servlet-name>
        <servlet-class>servlet.api.id.UserIdServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserIdServlet</servlet-name>
        <url-pattern>/api/user/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ProductServlet</servlet-name>
        <servlet-class>servlet.api.ProductServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ProductServlet</servlet-name>
        <url-pattern>/api/product</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ProductIdServlet</servlet-name>
        <servlet-class>servlet.api.id.ProductIdServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ProductIdServlet</servlet-name>
        <url-pattern>/api/product/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginIndexServlet</servlet-name>
        <servlet-class>servlet.login.LoginIndexServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginIndexServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegisterIndexServlet</servlet-name>
        <servlet-class>servlet.register.RegisterIndexServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RegisterIndexServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AccountIndexServlet</servlet-name>
        <servlet-class>servlet.account.AccountIndexServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AccountIndexServlet</servlet-name>
        <url-pattern>/account/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AccountServlet</servlet-name>
        <servlet-class>servlet.account.AccountServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AccountServlet</servlet-name>
        <url-pattern>/account</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AccountEditServlet</servlet-name>
        <servlet-class>servlet.account.AccountEditServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AccountEditServlet</servlet-name>
        <url-pattern>/account/edit/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AccountDeleteServlet</servlet-name>
        <servlet-class>servlet.account.AccountDeleteServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AccountDeleteServlet</servlet-name>
        <url-pattern>/account/delete/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ProductIndexServlet</servlet-name>
        <servlet-class>servlet.product.ProductIndexServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ProductIndexServlet</servlet-name>
        <url-pattern>/product/*</url-pattern>
    </servlet-mapping>



</web-app>